<?xml version="1.0" encoding="UTF-8"?>
<api context="/finance" name="finance_API" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET">
        <inSequence>
            <property name="serviceFunction" scope="default" type="STRING" value="finance.serviceFunction"/>
            <property name="apiKey" scope="default" type="STRING" value="finance.apiKey"/>
            <call>
                <endpoint>
                    <http method="get" uri-template="finance.targetURL">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
